# Database Configuration (PostgreSQL in Docker)
DB_HOST=db
DB_PORT=5432
DB_NAME=afyaconnect_prod
DB_USER=afyaconnect_user
DB_PASSWORD=AfyaConnect2024!Secure@Database123

# JWT Configuration
JWT_SECRET=afyaconnect-jwt-secret-2024-production-key-change-this-regularly
JWT_EXPIRES_IN=24h

# Server Configuration
NODE_ENV=production
PORT=3001
HOST=0.0.0.0

# CORS Configuration
CORS_ORIGIN=https://afayaconekt.care

# File Upload Configuration
UPLOAD_PATH=/app/uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Google AI Configuration (you need to add your actual key)
GOOGLE_AI_API_KEY=your-actual-gemini-api-key-here

# Domain Configuration (add this for Docker setup)
DOMAIN_NAME=afayaconekt.care
FRONTEND_URL=https://afayaconekt.care
BACKEND_URL=https://afayaconekt.care/api

# Email Configuration (optional - can leave as is)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# SSL Configuration (handled by Nginx in Docker)
SSL_CERT_PATH=/etc/ssl/certs/ssl-cert-snakeoil.pem
SSL_KEY_PATH=/etc/ssl/private/ssl-cert-snakeoil.key

# Logging
LOG_LEVEL=info
LOG_FILE=/app/logs/afyaconnect.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100